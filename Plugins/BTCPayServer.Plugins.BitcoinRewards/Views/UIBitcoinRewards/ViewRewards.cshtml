@model List<BTCPayServer.Plugins.BitcoinRewards.Models.RewardRecord>
@{
    ViewData.SetActivePage("StoreSettings", "Bitcoin Rewards History", Context.GetStoreData().Id);
}

<div class="row">
    <div class="col-lg-12">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>

        @if (Model == null || !Model.Any())
        {
            <p class="text-muted">No rewards have been processed yet.</p>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Reward Amount (BTC)</th>
                        <th>Bitcoin Address</th>
                        <th>Status</th>
                        <th>Source</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reward in Model)
                    {
                        <tr>
                            <td>@reward.OrderId</td>
                            <td>@(reward.CustomerEmail ?? reward.CustomerPhone ?? "N/A")</td>
                            <td>@reward.RewardAmount.ToString("F8")</td>
                            <td><code>@reward.BitcoinAddress</code></td>
                            <td>
                                <span class="badge badge-@(reward.Status == BTCPayServer.Plugins.BitcoinRewards.Models.RewardStatus.Sent ? "success" : reward.Status == BTCPayServer.Plugins.BitcoinRewards.Models.RewardStatus.Failed ? "danger" : "warning")">
                                    @reward.Status
                                </span>
                            </td>
                            <td>@reward.Source</td>
                            <td>@reward.CreatedAt.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

