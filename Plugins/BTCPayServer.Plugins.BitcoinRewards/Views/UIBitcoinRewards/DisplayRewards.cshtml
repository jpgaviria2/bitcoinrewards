<body>
    <div class="container">
        <div class="header">
            <h1>üéØ Trails Coffee Rewards</h1>
            <p>Bitcoin Rewards Display</p>
        </div>
        
        <div class="status-bar">
            Auto-refresh: @Model.AutoRefreshSeconds seconds | Timeframe: @Model.TimeframeMinutes minutes
        </div>
        
        @if (Model.HasReward && !string.IsNullOrEmpty(Model.LnurlQrDataUri))
        {
            <div class="reward-display">
                <h2 style="color: #667eea; font-size: 2rem; margin-bottom: 20px;">‚ú® Scan to Claim Your Reward!</h2>
                
                <div class="qr-code">
                    <img src="@Model.LnurlQrDataUri" alt="Reward QR Code" />
                </div>
                
                <div class="reward-info">
                    <div class="amount">@Model.RewardAmountSatoshis sats</div>
                    @if (!string.IsNullOrEmpty(Model.OrderId))
                    {
                        <div class="order-id">Order: @Model.OrderId</div>
                    }
                    @if (Model.CreatedAt.HasValue)
                    {
                        <div class="order-id">Created: @Model.CreatedAt.Value.ToLocalTime().ToString("h:mm:ss tt")</div>
                    }
                </div>
                
                <div class="instructions">
                    Scan the QR code above with your<br/>
                    Trails Coffee Rewards Wallet
                </div>
                
                @if (Model.BoltCardEnabled)
                {
                <div id="nfc-section" style="margin-top: 30px;">
                    <div style="border-top: 2px solid #eee; padding-top: 20px; margin-top: 10px;">
                        <p style="color: #667eea; font-size: 1.3rem; font-weight: 600; margin-bottom: 15px;">
                            ‚Äî OR ‚Äî
                        </p>
                        <button id="nfc-tap-btn" onclick="startNfcRead()" style="
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                            color: white;
                            border: none;
                            padding: 20px 40px;
                            font-size: 1.4rem;
                            border-radius: 16px;
                            cursor: pointer;
                            font-weight: 600;
                            box-shadow: 0 4px 15px rgba(102,126,234,0.4);
                            transition: all 0.3s ease;
                        ">
                            üì± Tap Your Rewards Card
                        </button>
                        <p style="color: #888; font-size: 0.95rem; margin-top: 10px;">
                            Hold your NFC card to the back of this device
                        </p>
                    </div>
                    <div id="nfc-status" style="margin-top: 15px; font-size: 1.2rem; color: #333; display: none;"></div>
                    <div id="nfc-success" style="margin-top: 15px; display: none;">
                        <div style="background: #d4edda; border: 2px solid #28a745; border-radius: 12px; padding: 20px; color: #155724;">
                            <div style="font-size: 2rem; margin-bottom: 10px;">‚úÖ</div>
                            <div style="font-size: 1.4rem; font-weight: 700;" id="nfc-success-amount"></div>
                            <div style="font-size: 1.1rem; margin-top: 8px;" id="nfc-success-balance"></div>
                        </div>
                    </div>
                    <div id="nfc-error" style="margin-top: 15px; display: none;">
                        <div style="background: #f8d7da; border: 2px solid #dc3545; border-radius: 12px; padding: 20px; color: #721c24;">
                            <div style="font-size: 1.2rem;" id="nfc-error-msg"></div>
