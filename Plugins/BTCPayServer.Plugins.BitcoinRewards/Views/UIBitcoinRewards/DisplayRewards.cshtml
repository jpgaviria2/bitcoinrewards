    @if (Model.HasReward && !string.IsNullOrEmpty(Model.LnurlQrDataUri))
    {
        <script>
            // Client-side timeout and countdown
            let remainingSeconds = @Model.RemainingSeconds;
            const countdownElement = document.getElementById('countdown-seconds');
            const countdownTimer = document.getElementById('countdown-timer');
            
            function hideReward() {
                // Mark reward as dismissed on the server, then reload to show waiting state
                fetch('/plugins/bitcoin-rewards/@Model.StoreId/dismiss-reward', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ rewardId: '@Model.RewardId' })
                }).finally(() => {
                    window.location.reload();
                });
            }
            
            function updateCountdown() {
                if (remainingSeconds <= 0) {
                    hideReward();
                    return;
                }
                
                remainingSeconds--;
                countdownElement.textContent = remainingSeconds;
                
                // Update styling based on remaining time
                if (remainingSeconds <= 10) {
                    countdownTimer.classList.add('critical');
                    countdownTimer.classList.remove('warning');
                } else if (remainingSeconds <= 30) {
                    countdownTimer.classList.add('warning');
                    countdownTimer.classList.remove('critical');
                } else {
                    countdownTimer.classList.remove('warning', 'critical');
                }
                
                setTimeout(updateCountdown, 1000);
            }
            
            // Start countdown if there's remaining time
            if (remainingSeconds > 0) {
                setTimeout(updateCountdown, 1000);
            } else {
                // Already expired, hide immediately
                hideReward();
            }
        </script>
        
        @if (Model.BoltCardEnabled)
        {
        <script>
            // Web NFC support for Bolt Card tap-to-collect
            const nfcSection = document.getElementById('nfc-section');
            const nfcStatus = document.getElementById('nfc-status');
            const nfcSuccess = document.getElementById('nfc-success');
            const nfcError = document.getElementById('nfc-error');
            const rewardId = '@Model.RewardId';
            let nfcReader = null;
            let nfcProcessing = false;
            
            // Show NFC unavailable message if Web NFC is not supported
            if (!('NDEFReader' in window)) {
                const btn = document.getElementById('nfc-tap-btn');
                if (btn) {
                    btn.textContent = 'üì± NFC not available on this browser';
                    btn.style.opacity = '0.5';
                    btn.disabled = true;
                }
            }
            
            async function startNfcRead() {
                if (nfcProcessing) return;
                if (!('NDEFReader' in window)) {
                    showNfcError('NFC not supported on this device. Use the QR code instead.');
                    return;
                }
                
                try {
                    nfcReader = new NDEFReader();
                    nfcStatus.style.display = 'block';
                    nfcStatus.innerHTML = '<span style="color: #667eea;">üì° Ready ‚Äî tap your card now...</span>';
                    nfcError.style.display = 'none';
                    nfcSuccess.style.display = 'none';
                    
                    document.getElementById('nfc-tap-btn').disabled = true;
                    document.getElementById('nfc-tap-btn').textContent = 'üì° Waiting for card...';
                    
                    await nfcReader.scan();
                    
                    nfcReader.addEventListener('reading', async ({ message }) => {
                        if (nfcProcessing) return;
                        nfcProcessing = true;
                        
                        // Extract the NDEF URL record
                        let cardUrl = null;
                        for (const record of message.records) {
                            if (record.recordType === 'url') {
                                const decoder = new TextDecoder();
                                cardUrl = decoder.decode(record.data);
                                break;
                            }
                        }
                        
                        if (!cardUrl) {
                            showNfcError('No URL found on card. Is this a valid Bolt Card?');
                            nfcProcessing = false;
                            return;
                        }
                        
                        // Extract p and c parameters from the card's URL
                        try {
                            const url = new URL(cardUrl);
                            const p = url.searchParams.get('p');
                            const c = url.searchParams.get('c');
                            
                            if (!p || !c) {
                                // Try k1 format (p-c combined)
                                const k1 = url.searchParams.get('k1');
                                if (k1 && k1.includes('-')) {
                                    const parts = k1.split('-');
                                    await submitTap(parts[0], parts[1]);
                                } else {
                                    showNfcError('Card URL missing required parameters.');
                                    nfcProcessing = false;
                                }
                                return;
                            }
                            
                            await submitTap(p, c);
                        } catch (e) {
                            showNfcError('Error reading card: ' + e.message);
                            nfcProcessing = false;
                        }
                    });
                    
                    nfcReader.addEventListener('readingerror', () => {
                        showNfcError('Error reading NFC card. Try again.');
                        nfcProcessing = false;
                    });
                } catch (err) {
                    showNfcError('NFC error: ' + err.message);
                }
            }
            
            async function submitTap(p, c) {
                nfcStatus.innerHTML = '<span style="color: #667eea;">‚è≥ Verifying card...</span>';
                
                try {
                    const response = await fetch('/plugins/bitcoin-rewards/boltcard/tap', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ p: p, c: c, rewardId: rewardId })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        nfcStatus.style.display = 'none';
                        nfcSuccess.style.display = 'block';
                        document.getElementById('nfc-success-amount').textContent =
                            data.rewardSats.toLocaleString() + ' sats added to your card!';
                        document.getElementById('nfc-success-balance').textContent =
                            'Card balance: ' + data.newBalanceSats.toLocaleString() + ' sats';
                        
                        // Hide the QR code section since the reward is claimed
                        const qrSection = document.querySelector('.qr-code');
                        if (qrSection) qrSection.style.display = 'none';
                        
                        // Auto-refresh after 5 seconds
                        setTimeout(() => window.location.reload(), 5000);
                    } else {
                        showNfcError(data.error || 'Failed to collect reward');
                        nfcProcessing = false;
                    }
                } catch (err) {
                    showNfcError('Network error: ' + err.message);
                    nfcProcessing = false;
                }
            }
            
            function showNfcError(msg) {
                nfcStatus.style.display = 'none';
                nfcError.style.display = 'block';
                document.getElementById('nfc-error-msg').textContent = msg;
                
                // Reset button
                const btn = document.getElementById('nfc-tap-btn');
                if (btn) {
                    btn.disabled = false;
                    btn.textContent = 'üì± Tap Your Rewards Card';
                }
            }
        </script>
        }
    }
</body>
</html>
