            font-size: 4rem;
            margin-bottom: 20px;
            animation: pulse 2s ease-in-out infinite;
        }
        
        @@keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.5; transform: scale(1.1); }
        }
        
        .qr-code {
            margin: 30px 0;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 12px;
            display: inline-block;
        }
        
        .qr-code img {
            max-width: 500px;
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
        
        .reward-info {
            color: #333;
            margin-top: 30px;
        }
        
