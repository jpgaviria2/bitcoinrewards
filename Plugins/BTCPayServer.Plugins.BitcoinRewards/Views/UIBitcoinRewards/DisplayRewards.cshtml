            font-size: 2.5rem;
            font-weight: 700;
            color: #28a745;
            margin: 20px 0;
        }
        
        .order-id {
            font-size: 1.2rem;
            color: #666;
            margin-top: 10px;
        }
        
        .instructions {
            color: #495057;
            font-size: 1.3rem;
            margin-top: 20px;
            line-height: 1.6;
        }
        
        .refresh-button, .done-button {
            background: white;
            color: #667eea;
            border: 2px solid white;
            padding: 15px 40px;
            font-size: 1.2rem;
            border-radius: 50px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            margin: 10px;
        }
        
        .refresh-button:hover, .done-button:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        }
        
        .done-button {
            background: #28a745;
            color: white;
            border-color: #28a745;
        }
        
        .done-button:hover {
            background: #218838;
            border-color: #218838;
        }
        
        .countdown-timer {
            color: #667eea;
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 20px;
        }
        
        .countdown-timer.warning {
            color: #ffc107;
        }
        
        .countdown-timer.critical {
            color: #dc3545;
            animation: pulse 1s ease-in-out infinite;
        }
        
        .footer {
            margin-top: 30px;
            opacity: 0.8;
            font-size: 1rem;
        }
        
        .status-bar {
            background: rgba(255,255,255,0.2);
            padding: 10px 20px;
            border-radius: 50px;
            display: inline-block;
            margin-bottom: 20px;
        }
        
        @@media (max-width: 768px) {
            .header h1 { font-size: 2rem; }
            .header p { font-size: 1.2rem; }
            .reward-display { padding: 30px 20px; }
            .qr-code img { max-width: 350px; }
            .amount { font-size: 2rem; }
            .instructions { font-size: 1.1rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üéØ Trails Coffee Rewards</h1>
            <p>Bitcoin Rewards Display</p>
        </div>
        
        <div class="status-bar">
            Auto-refresh: @Model.AutoRefreshSeconds seconds | Timeframe: @Model.TimeframeMinutes minutes
        </div>
        
        @if (Model.HasReward && !string.IsNullOrEmpty(Model.LnurlQrDataUri))
        {
            <div class="reward-display">
                <h2 style="color: #667eea; font-size: 2rem; margin-bottom: 20px;">‚ú® Scan to Claim Your Reward!</h2>
                
                <div class="qr-code">
                    <img src="@Model.LnurlQrDataUri" alt="Reward QR Code" />
                </div>
                
                <div class="reward-info">
                    <div class="amount">@Model.RewardAmountSatoshis sats</div>
                    @if (!string.IsNullOrEmpty(Model.OrderId))
                    {
                        <div class="order-id">Order: @Model.OrderId</div>
                    }
                    @if (Model.CreatedAt.HasValue)
                    {
                        <div class="order-id">Created: @Model.CreatedAt.Value.ToLocalTime().ToString("h:mm:ss tt")</div>
                    }
                </div>
                
                <div class="instructions">
                    Scan the QR code above with your<br/>
                    Trails Coffee Rewards Wallet
                </div>
                
                <div class="countdown-timer" id="countdown-timer">
                    Time remaining: <span id="countdown-seconds">@Model.RemainingSeconds</span>s
                </div>
                
                <button class="done-button" id="done-button" onclick="hideReward()">‚úì Done</button>
            </div>
        }
        else
        {
            <div class="reward-display waiting" id="waiting-display">
                <div class="waiting-icon">‚è≥</div>
                <div class="waiting-message">Waiting for rewards...</div>
                <p style="color: #666; font-size: 1.2rem;">
                    The latest unclaimed reward will appear here automatically
                </p>
            </div>
        }
        
        <button class="refresh-button" onclick="window.location.reload();">üîÑ Refresh Now</button>
        
        <div class="footer">
            <p>Page refreshes automatically every @Model.AutoRefreshSeconds seconds</p>
            <p style="margin-top: 10px; font-size: 0.9rem;">
                <a href="/plugins/bitcoin-rewards/@Model.StoreId/settings" style="color: white; text-decoration: underline;">Back to Settings</a>
            </p>
        </div>
    </div>
    
    @if (Model.HasReward && !string.IsNullOrEmpty(Model.LnurlQrDataUri))
    {
        <script>
            // Client-side timeout and countdown
            let remainingSeconds = @Model.RemainingSeconds;
            const countdownElement = document.getElementById('countdown-seconds');
            const countdownTimer = document.getElementById('countdown-timer');
            
            function hideReward() {
                const rewardDisplay = document.querySelector('.reward-display:not(.waiting)');
                const waitingDisplay = document.getElementById('waiting-display');
                
                if (rewardDisplay) {
                    rewardDisplay.style.display = 'none';
                }
                if (waitingDisplay) {
                    waitingDisplay.style.display = 'block';
                }
            }
            
            function updateCountdown() {
                if (remainingSeconds <= 0) {
                    hideReward();
                    return;
                }
                
                remainingSeconds--;
                countdownElement.textContent = remainingSeconds;
                
                // Update styling based on remaining time
                if (remainingSeconds <= 10) {
                    countdownTimer.classList.add('critical');
                    countdownTimer.classList.remove('warning');
                } else if (remainingSeconds <= 30) {
                    countdownTimer.classList.add('warning');
                    countdownTimer.classList.remove('critical');
                } else {
                    countdownTimer.classList.remove('warning', 'critical');
                }
                
                setTimeout(updateCountdown, 1000);
            }
            
            // Start countdown if there's remaining time
            if (remainingSeconds > 0) {
                setTimeout(updateCountdown, 1000);
            } else {
                // Already expired, hide immediately
                hideReward();
            }
        </script>
    }
</body>
</html>
}
