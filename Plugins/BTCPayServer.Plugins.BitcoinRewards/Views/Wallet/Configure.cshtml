@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Plugins.BitcoinRewards
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.Plugins.BitcoinRewards.ViewModels.WalletConfigurationViewModel
@{
    ViewData.SetActivePage(BitcoinRewardsPlugin.PluginNavKey, "Configure Cashu Wallet", "Configure");
}

<form method="post">
    <div class="sticky-header d-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <input type="submit" class="btn btn-primary" value="Save Configuration" />
    </div>

    <partial name="_StatusMessage" />
    
    <div class="row">
        <div class="col-md-8">
            
            <div class="form-group my-4">
                <div class="d-flex align-items-center">
                    <input asp-for="Enabled" type="checkbox" class="btcpay-toggle me-3"/>
                    <label asp-for="Enabled" class="form-check-label">Enable Wallet</label>
                </div>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>

            @if (Model.Enabled)
            {
                <div class="form-group my-4">
                    <label asp-for="MintUrl" class="form-label">Mint URL</label>
                    <input asp-for="MintUrl" class="form-control" placeholder="https://mint.example.com" />
                    <span asp-validation-for="MintUrl" class="text-danger"></span>
                    <small>Enter the URL of your Cashu mint server</small>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="MintUrl" />
            }
        </div>
    </div>
</form>

@section PageFootContent {
    <partial name="_ValidationScriptsPartial" />
}

