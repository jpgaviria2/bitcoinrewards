@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Plugins.BitcoinRewards
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.Plugins.BitcoinRewards.ViewModels.WalletViewModel
@{
    ViewData.SetActivePage(BitcoinRewardsPlugin.PluginNavKey, "Wallet", "Wallet");
}

<h2 class="mb-2 mb-lg-3">@ViewData["Title"]</h2>
<div>
    <partial name="_StatusMessage" />

    <div class="d-flex flex-column">
        <div class="row">
            <div class="col-xl-8">
                <div class="d-flex flex-wrap gap-3 mb-4 w-100">
                    <div class="bg-tile p-3 rounded w-100">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0">Total Balance</h5>
                            <a asp-action="TopUp" asp-route-storeId="@Model.StoreId" class="btn btn-primary btn-sm">Top Up</a>
                        </div>
                        <div class="d-flex align-items-baseline gap-2">
                            <span class="h3">@Model.EcashBalance</span>
                            <span class="text-secondary">@Model.Unit</span>
                        </div>
                        @if (Model.LightningBalance > 0)
                        {
                            <div class="mt-2 text-muted small">
                                Lightning: @Model.LightningBalance sat
                            </div>
                        }
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>Mint</th>
                            <th class="text-end">Amount</th>
                            <th>Unit</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <vc:icon symbol="wallet"/>
                                    <span class="text-truncate">@Model.MintUrl</span>
                                </div>
                            </td>
                            <td class="text-end">@Model.EcashBalance</td>
                            <td>@Model.Unit</td>
                            <td>
                                @if (Model.EcashBalance > 0)
                                {
                                    <form method="post" asp-action="ExportToken" asp-route-storeId="@Model.StoreId">
                                        <button type="submit" class="btn btn-link p-0">
                                            Export Token
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

