@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Plugins.BitcoinRewards
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.Plugins.BitcoinRewards.ViewModels.WalletViewModel
@{
    ViewData.SetActivePage(BitcoinRewardsPlugin.PluginNavKey, "Cashu Wallet", "Wallet");
}

<h2 class="mb-2 mb-lg-3">@ViewData["Title"]</h2>
<div>
    <partial name="_StatusMessage" />

    <div class="d-flex flex-column">
        <div class="row">
            <div class="col-xl-8">
                <div class="d-flex flex-wrap gap-3 mb-4 w-100">
                    <div class="bg-tile p-3 rounded w-100">
                        <h5 class="mb-2">Total Balance</h5>
                        @foreach (var balance in Model.GroupedBalances)
                        {
                            <div class="d-flex align-items-baseline gap-2">
                                <span class="h3">@balance.Amount</span>
                                <span class="text-secondary">@balance.Unit</span>
                            </div>
                        }
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>Mint</th>
                            <th class="text-end">Amount</th>
                            <th>Unit</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.AvailableBalances)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <vc:icon symbol="wallet"/>
                                        <span class="text-truncate">@item.Mint</span>
                                    </div>
                                </td>
                                <td class="text-end">@item.Amount</td>
                                <td>@item.Unit</td>
                                <td>
                                    @if (item.Amount > 0)
                                    {
                                        <form method="post" asp-action="ExportMintBalance" asp-route-storeId="@Model.StoreId">
                                            <input type="hidden" name="mintUrl" value="@item.Mint"/>
                                            <input type="hidden" name="unit" value="@item.Unit"/>
                                            <button type="submit" class="btn btn-link p-0">
                                                Export Token
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                <div class="mt-4 pt-4 border-top">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">Exported Tokens History</h4>
                        <a asp-action="TopUp" asp-route-storeId="@Model.StoreId" class="btn btn-primary btn-sm">Top Up</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Mint</th>
                                <th class="text-end">Amount</th>
                                <th>Unit</th>
                                <th>Status</th>
                                <th style="width: 80px;"></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.ExportedTokens)
                            {
                                <tr>
                                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <span class="text-truncate d-inline-block" style="max-width: 200px;">@item.Mint</span>
                                    </td>
                                    <td class="text-end">@item.Amount</td>
                                    <td>@item.Unit</td>
                                    <td>
                                        <span class="badge @(item.IsUsed ? "bg-secondary" : "bg-warning")">
                                            @(item.IsUsed ? "Spent" : "Pending")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ExportedToken", new { tokenId = item.Id })" class="btn btn-link p-0">Show</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

