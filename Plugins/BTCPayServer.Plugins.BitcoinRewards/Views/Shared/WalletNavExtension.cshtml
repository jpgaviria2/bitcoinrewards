@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using BTCPayServer.Plugins.BitcoinRewards.Services
@inject IScopeProvider ScopeProvider
@inject WalletConfigurationService WalletConfigurationService
@using Microsoft.AspNetCore.Identity
@using BTCPayServer.Data
@inject SignInManager<ApplicationUser> SignInManager
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
}

@if (SignInManager.IsSignedIn(User) && !string.IsNullOrEmpty(storeId))
{
    var config = await WalletConfigurationService.GetConfigurationAsync(storeId);
    var isEnabled = config != null && config.Enabled;
    var isActive = Context.Request.Path.Value?.Contains("/bitcoin-rewards/wallet") == true || 
                   Context.Request.Path.Value?.Contains("/bitcoin-rewards") == true;
    
    <li class="nav-item">
        <a class="nav-link @(isActive ? "active" : "")"
           asp-route-storeId="@storeId"
           asp-action="Configure"
           asp-controller="Wallet">
            <span class="me-2 btcpay-status btcpay-status--@(isEnabled ? "enabled" : "pending")"></span>
            <span>Bitcoin Rewards</span>
        </a>
    </li>
    @if (isActive)
    {
        <li class="nav-item nav-item-sub">
            <a class="nav-link"
               asp-route-storeId="@storeId"
               asp-action="Index"
               asp-controller="Wallet">
                <span class="me-2">Wallet</span>
            </a>
        </li>
    }
}

